{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${fileDirname}/*.c",
				"-o",
				"${workspaceFolder}/bin/${fileBasenameNoExtension}",
				"-lpcap",
				"-lpthread",
				"-I/usr/include/python3.8", "-L/usr/lib/python3.8/config-3.8-x86_64-linux-gnu", "-L/usr/lib", "-lpython3.8", "-lcrypt", "-ldl", "-lutil", "-lm"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/gcc"
		}
	]
}